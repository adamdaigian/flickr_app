<div class="offset3 hero-unit span6 offset3">
<h1>Login</h1>
<hr class="soften">
<%= form_tag sessions_path do %>

<div class="field">
<%= label_tag :username %>
<%= text_field_tag :username, params[:username] %>
</div>

<div class="field">
<%= label_tag :email %>
<%= text_field_tag :email, params[:email] %>
</div>

<div class="field">
<%= label_tag :password %>
<%= password_field_tag :password %>
</div>

<div class="field">
<%= check_box_tag :remember_me, 1, params[:remember_me] %>
<%= label_tag :remember_me %>
</div>
<div class="btn btn-large btn-info"><%= submit_tag "Log in" %>
</div>
<% end %>
</div>